{
    "name": "@packages/react-components",
    "version": "0.0.2",
    "type": "module",
    "license": "MIT",
    "author": "ph.duy113@gmail.com",
    "description": "THis is a UI component library for building React application",
    "keywords": [
        "react",
        "components",
        "ui"
    ],
    "scripts": {
        "type-checks": "tsc --noEmit",
        "build": " vite build && tsc -p tsconfig.lib.json",
        "prettier": "prettier . --write --cache",
        "lint": "eslint .",
        "preview": "vite preview",
        "prepack": "clean-package",
        "postpack": "clean-package restore",
        "prepublishOnly": "npm run build"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./components": {
            "types": "./dist/components/index.d.ts",
            "default": "./dist/components/index.js"
        },
        "./themes/*.css": "./dist/themes/*.css"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/phamhaduy95/UI-components.git",
        "directory": "packages/react-ui"
    },
    "bugs": {
        "url": "https://github.com/phamhaduy95/react-component-lib/issues"
    },
    "homepage": "https://github.com/phamhaduy95/react-component-lib#readme",
    "files": [
        "dist"
    ],
    "dependencies": {
        "@ark-ui/react": "^5.5.0",
        "@radix-ui/react-icons": "^1.3.2",
        "classnames": "^2.5.1",
        "radix-ui": "^1.3.4",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "3",
        "@storybook/addon-essentials": "8.6.11",
        "@storybook/addon-onboarding": "8.6.11",
        "@storybook/blocks": "8.6.11",
        "@storybook/experimental-addon-test": "8.6.11",
        "@storybook/react": "8.6.11",
        "@storybook/react-vite": "8.6.11",
        "@tailwindcss/vite": "^4.1.1",
        "@types/node": "^22.14.0",
        "@types/react": "^19.1.0",
        "@types/react-dom": "^19.1.0",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react-swc": "^3.9.0",
        "clean-package": "^2.2.0",
        "eslint": "^9.23.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "eslint-plugin-storybook": "^0.12.0",
        "glob": "^11.0.1",
        "storybook": "8.6.11",
        "vite": "^6.2.4",
        "vite-plugin-dts": "^4.5.3",
        "vite-plugin-lib-inject-css": "^2.2.2"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0"
    },
    "sideEffects": [
        "**/*.css"
    ]
}